<section>
  <header>
    <h1>Pets</h1>
  </header>

  <ul>
    <% @pet_companions.each do |pet| %>
      <li><%= pet.nickname || pet.pet_species.name %> â€” Level <%= pet.level %></li>
    <% end %>
  </ul>

  <section>
    <h2>Adopt Pet</h2>
    <%= form_with model: PetCompanion.new, url: pet_companions_path do |form| %>
      <%= form.collection_select :pet_species_id, PetSpecies.all.order(:name), :id, :name %>
      <%= form.text_field :nickname, placeholder: "Nickname" %>
      <%= form.submit "Adopt" %>
    <% end %>
  </section>
</section>
