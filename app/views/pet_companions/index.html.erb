<section class="pets-panel">
  <div class="page-header">
    <h1>Companion Pets</h1>
    <p>Keep companions happy to unlock passive buffs and gathering bonuses.</p>
  </div>

  <div class="grid md:grid-cols-2 gap-4">
    <% @pet_companions.each do |pet| %>
      <article class="pet-card" data-mobile-hud-target="panel" id="<%= dom_id(pet) %>">
        <header class="flex justify-between items-center">
          <div>
            <h2><%= pet.nickname || pet.pet_species.name %></h2>
            <p class="text-muted text-sm">
              Level <%= pet.level %> •
              <span class="pet-affinity pet-affinity--<%= pet.affinity_stage %>"><%= pet.affinity_stage.titleize %></span>
              — <%= pet.bonding_experience %> XP
            </p>
          </div>
          <div class="text-right text-xs text-muted">
            <p>Combat Bonus: <span class="text-success">+<%= pet.passive_bonuses[:combat] %>%</span></p>
            <p>Gathering Bonus: <span class="text-success">+<%= pet.passive_bonuses[:gathering] %>%</span></p>
          </div>
        </header>

        <section class="mt-3">
          <h3 class="text-sm uppercase tracking-wide text-muted">Care Tasks</h3>
          <div class="flex flex-wrap gap-2 mt-2">
            <% @care_tasks.each do |task_key, task| %>
              <%= button_to "#{task_key.to_s.titleize} (+#{task[:bonding_xp]}xp)",
                care_pet_companion_path(pet, task: task_key),
                method: :post,
                class: "btn-secondary btn-sm",
                disabled: !pet.care_available? %>
            <% end %>
          </div>
          <% unless pet.care_available? %>
            <p class="text-xs text-muted mt-2">Care ready <%= time_ago_in_words(pet.care_task_available_at) %> from now.</p>
          <% end %>
        </section>
      </article>
    <% end %>
  </div>

  <section class="card mt-4 border-t pt-4">
    <h2>Adopt New Companion</h2>
    <%= form_with model: PetCompanion.new, url: pet_companions_path, class: "grid md:grid-cols-3 gap-3" do |form| %>
      <div class="field">
        <%= form.label :pet_species_id, "Species" %>
        <%= form.collection_select :pet_species_id, PetSpecies.order(:name), :id, :name %>
      </div>
      <div class="field">
        <%= form.label :nickname %>
        <%= form.text_field :nickname, placeholder: "Nickname" %>
      </div>
      <div class="field self-end">
        <%= form.submit "Adopt Companion", class: "btn-primary w-full" %>
      </div>
    <% end %>
  </section>
</section>
