<div class="page-header">
  <h1>Quest Log</h1>
  <p>Filter story, side, repeatable, and event quests with live updates.</p>
</div>

<div class="quest-layout" data-controller="layout-stack">
  <turbo-frame id="quest-log">
    <%= render "filters", filter: @filter, filter_counts: @filter_counts %>
    <%= render "assignment_list", assignments: @quest_assignments, filter: @filter %>
  </turbo-frame>

  <turbo-frame id="daily-quests">
    <%= render "daily_slots", slots: @daily_slots %>
  </turbo-frame>

  <turbo-frame id="weekly-quests">
    <%= render "repeatable_assignments", assignments: @weekly_assignments %>
  </turbo-frame>

  <turbo-frame id="quest-dialogue">
    <div class="quest-dialogue">
      <div class="quest-dialogue-placeholder">
        <p>Select a quest to view dialogue, cutscenes, and map overlays.</p>
      </div>
    </div>
  </turbo-frame>
</div>
