<div class="page-header">
  <h1>Quest Log</h1>
  <p class="text-muted">Track your main story, side quests, and daily objectives.</p>
</div>

<div class="quest-layout" data-controller="layout-stack">
  <turbo-frame id="quest-log">
    <%= render "assignment_list", assignments: @quest_assignments %>
  </turbo-frame>

  <turbo-frame id="daily-quests">
    <%= render "daily_slots", slots: @daily_slots %>
  </turbo-frame>

  <turbo-frame id="quest-dialogue">
    <div class="quest-dialogue-placeholder">
      <p>Select a quest to view dialogue and objectives.</p>
    </div>
  </turbo-frame>
</div>

