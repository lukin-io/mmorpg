    <p>Welcome, <%= current_user.email %>. Use this dashboard while core gameplay screens are being built.</p>
  </section>

  <section>
    <h2>Feature Flags</h2>
    <ul>
      <% @feature_flags.each do |feature| %>
        <li>
          <strong><%= feature.key %></strong> â€” <%= feature.enabled? ? "enabled" : "disabled" %>
