<div class="equipped-title-panel card">
  <h2>Currently Equipped</h2>

  <% if title.present? %>
    <div class="equipped-display">
      <span class="title-prefix"><%= title.prefix %></span>
      <span class="character-name"><%= current_character.name %></span>
      <% if title.suffix.present? %>
        <span class="title-suffix"><%= title.suffix %></span>
      <% end %>
    </div>

    <div class="title-details">
      <span class="title-name rarity--<%= title.rarity %>"><%= title.name %></span>
      <% if title.description.present? %>
        <p class="title-description"><%= title.description %></p>
      <% end %>
    </div>

    <%= button_to "Remove Title", unequip_titles_path, method: :delete, class: "game-btn game-btn--secondary" %>
  <% else %>
    <div class="no-title">
      <span class="character-name"><%= current_character.name %></span>
      <p class="hint">Select a title from your collection below</p>
    </div>
  <% end %>
</div>

