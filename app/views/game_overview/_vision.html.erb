<section class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
  <h2 class="text-2xl font-semibold mb-3"><%= section.fetch(:title) %></h2>
  <p class="text-slate-600 mb-4"><%= section[:description] %></p>
  <ul class="list-disc list-inside space-y-2 text-slate-700">
    <% section.fetch(:bullets, []).each do |bullet| %>
      <li><%= bullet %></li>
    <% end %>
  </ul>
  <% if section[:links].present? %>
    <div class="mt-4 flex flex-wrap gap-4 text-sm font-semibold text-amber-600">
      <% section[:links].each do |link| %>
        <%= link_to link[:label], link[:path], class: "hover:underline" %>
      <% end %>
    </div>
  <% end %>
</section>

