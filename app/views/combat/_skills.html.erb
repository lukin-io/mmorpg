<div class="combat-skills-panel card">
  <h3>Skills</h3>

  <% if skills.any? %>
    <div class="skills-grid">
      <% skills.each do |skill| %>
        <div class="skill-slot" data-skill-id="<%= skill[:id] %>">
          <%= button_to combat_action_path(action_type: :skill, skill_id: skill[:id]),
                        method: :post,
                        class: "skill-btn skill-type--#{skill[:type]}",
                        data: { turbo: true },
                        title: skill_tooltip(skill) do %>
            <span class="skill-icon"><%= skill_icon(skill[:type]) %></span>
            <span class="skill-name"><%= skill[:name] %></span>
            <% if skill[:cost][:mp].to_i > 0 %>
              <span class="skill-cost"><%= skill[:cost][:mp] || skill[:cost]["mp"] %> MP</span>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="no-skills">No active skills available. Unlock skills from your skill tree!</p>
  <% end %>
</div>

